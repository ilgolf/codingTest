package programmers;

import java.util.*;

public class Kakao2020_02 {
	int pos; // 균형잡힌괄호가 나오는 위치
	
	// 균형잡힌 괄호 탐색
	boolean isCorrect(String str) {
		boolean ret = true;
		int left = 0, right = 0;
		Stack<Character> stack = new Stack<>();
		
		for(int i=0; i<str.length(); i++) {
			if(str.charAt(i) == '(') {
				left ++;
				stack.push('(');
			} else {
				right ++;
				if(stack.isEmpty()) return false;
				else stack.pop();
			}
			if(left == right) { // 균형잡힌 괄호
				pos = i + 1;
				return ret;
			}
		}
		
		return true;
	}
	
	public String solution(String p) {
		if(p.isEmpty()) return p;  // 1단계 
		
		// 2단계
		boolean correct = isCorrect(p);
		String u = p.substring(0, pos);
		String v = p.substring(pos, p.length());
		
		// 3단계
		if(correct) {
			return u + solution(v); // 3 - 1 재귀적으로 수행
		}
		
		// 4단계
		String answer = "(" + solution(v) + ")";  // 4-1, 4-2
		
		// 4-4
		for(int i=1; i<u.length() - 1; i++) {
			if(u.charAt(i) == '(') answer += ")";
			else answer += "(";
		} 
		
		// 결과 출력
		return answer;
	}

	public static void main(String[] args) {
		String p = ")(";
		
		Kakao2020_02 k = new Kakao2020_02();
		
		String answer = k.solution(p);
		System.out.println(answer);
	}
}
